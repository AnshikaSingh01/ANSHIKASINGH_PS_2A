#include<stdio.h>
void main()
{
    int i,j,k,L,num,n;
    printf("enter the no of rows");
    scanf("%d",&n);
    for(i=1;i<n;i++)
    {
        num=n;
        for(j=i;j>1;j--)
        {
            printf("\n");
        }
        for(k=1;k<=i;k++)
        {
            printf("%d",num);
            num++;
        }
        num=num-2;
        for(L=1;L<i;L++)
        {
            printf("%d",num);
        }
    }

}